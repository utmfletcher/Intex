@model Intex.Models.ViewModels.CleanProductViewModel

<div class="card">
    <div class="card-body">
        <div >
            <span style="font-size: 30px; font-weight:bold">@Model.Name</span>
            
        </div>
        <div >
            <span style="font-size: 40px; font-weight: 400;">$@Model.Price</spanstyle>

        </div>
    </div>

    <div class="card-body">
        
        <ul class="list-group list-group-flush">
            <li class="list-group-item">Year Made: @Model.Year</li>
            <li class="list-group-item">Number of Parts: @Model.NumParts</li>
            <li class="list-group-item">Color Tags: @Model.PrimaryColor, @Model.SecondaryColor</li>
            <li class="list-group-item">
                Category Tags: @string.Join(", ", Model.CategoryNames)
            </li>
            <li class="list-group-item" style="display: flex; justify-content: flex-end;">
                <form method="post" asp-page="/Cart">
                    <input type="hidden" asp-for="ProductId" value="@Model.ProductId" />
                    <button type="submit">Add to Cart</button>
                </form>
            </li>
        </ul>

        
    </div>
</div>




