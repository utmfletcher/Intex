@model Intex.Models.ViewModels.ProductListViewModel

<div class="container">
    <div class="row">
        @foreach (var product in Model.Products)
        {
            <div class="col-md-6">
                <!-- Used col-md-6 to display two cards across on medium and larger screens -->
                <partial name="productsInfo" model="product" />
            </div>
        }
    </div>
</div>
