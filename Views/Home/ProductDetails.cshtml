    <div id="top20Carousel" class="carousel slide" data-bs-ride="carousel">
        <div class="carousel-inner">
            @for (int i = 0; i < Model.Top20ViewModels.Count(); i += 3)
            {
                <div class="carousel-item @(i == 0 ? "active" : "")">
                    <div class="d-flex justify-content-around">
                        @for (int j = 0; j < 3; j++)
                        {
                            // Check if the product exists before trying to display it
                            if (Model.Top20ViewModels.Count() > i + j)
                            {
                                <partial name="Top20ProductSummary" model="Model.Top20ViewModels.ElementAt(i + j)" />
                            }
                        }
                    </div>
                </div>
            }
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#top20Carousel" data-bs-slide="prev" style="background-color: rgba(0, 0, 0, 0.5); color: white;">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#top20Carousel" data-bs-slide="next" style="background-color: rgba(0, 0, 0, 0.5); color: white;">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
        </button>
    </div>
    <br/>

