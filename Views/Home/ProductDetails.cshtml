@model Intex.Models.ViewModels.ProductListViewModel



<div class="row">
    <div class="col-3">
        <button style="background-color: #f0f0f0; color: #000; font-size: 16px; padding: 10px 20px; border: none; cursor: pointer; border-radius: 5px; font-weight: bold; font-family: Arial, sans-serif;">
            &lt; Products
        </button>
    </div>
    <div class="col-7">
        
    </div>
    <div class="col-2"></div>
</div>
<br/>

<div style="background-color: #f0f0f0; color: #000; padding: 20px; border-radius: 5px;">
    <!-- Products -->
    <div class="row">
        <div class="col-md-6">
            <div class="card">
                <div class="card-body">
                    <img src="@Model.img_link"  style="max-height: 100%; max-width: 100%;" />
                </div> 
            </div>
        </div>
        <div class="col-md-6">
            <!-- This should be the column for the products, also taking up half the width on medium screens -->
            @foreach (CleanProductViewModel p in Model.CleanProducts)
            {
                <div class="mb-4">
                    <partial name="ProductDetailsSummary" model="p" />
                </div>
            }
        </div>
    </div>
</div>


<br/>
<br/>
<div class="col">
    <div class="col-4" >
        <h6>Recommended Products</h6>
    </div>
    <br/>
