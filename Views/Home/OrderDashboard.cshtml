@model IEnumerable<Intex.Models.OrderPrediction>

@{
    ViewData["Title"] = "Order Dashboard";

    var classTypeDict = new Dictionary<int, string>
    {
        { 0, "Not Fraud"},
        { 1, "Fraud"}
    };
}


<div class="row">
    <a href="/AdminDashboard">
        <button style="background-color: #f0f0f0; color: #000; font-size: 16px; padding: 10px 20px; border: none; cursor: pointer; border-radius: 5px; font-weight: bold; font-family: Arial, sans-serif;">
            &lt; Admin Dashboard
        </button>
    </a>
    <br />
    <h2 style="color: #333; font-size: 32px; font-family: Arial, sans-serif; text-align: left; margin-left: 20px;">Order Dashboard</h2>

    <table style="width: 100%; border-collapse: collapse; margin: 20px 0;">
        <thead>
            <tr style="background-color: #f0f0f0; color: black;">
                <th style="padding: 10px; border: 1px solid #ddd;">Transaction ID</th>
                <th style="padding: 10px; border: 1px solid #ddd;">Customer ID</th>
                <th style="padding: 10px; border: 1px solid #ddd;">Date</th>
                <th style="padding: 10px; border: 1px solid #ddd;">Day Of Week</th>
                <th style="padding: 10px; border: 1px solid #ddd;">Time</th>
                <th style="padding: 10px; border: 1px solid #ddd;">Entry Mode</th>
                <th style="padding: 10px; border: 1px solid #ddd;">Amount</th>
                <th style="padding: 10px; border: 1px solid #ddd;">Type of Transactions</th>
                <th style="padding: 10px; border: 1px solid #ddd;">Transaction Country</th>
                <th style="padding: 10px; border: 1px solid #ddd;">Shipping Address</th>
                <th style="padding: 10px; border: 1px solid #ddd;">Bank</th>
                <th style="padding: 10px; border: 1px solid #ddd;">Type of Card</th>
                <th style="padding: 10px; border: 1px solid #ddd;">Fraud</th>
                <th style="padding: 10px; border: 1px solid #ddd;">Prediction</th>
                <th style="padding: 10px; border: 1px solid #ddd;"></th> 
                <th style="padding: 10px; border: 1px solid #ddd;"></th><!-- Column for actions like Edit/Delete -->
            </tr>
        </thead>
        <tbody>
            @foreach (var order in Model.Take(20))
            {
                <tr>
                    <td style ="padding: 8px; border: 1px solid #ddd;">@order.Orders.TransactionId</td>
                    <td style="padding: 8px; border: 1px solid #ddd;">@order.Orders.CustomerId</td>
                    <td style="padding: 8px; border: 1px solid #ddd;">@order.Orders.Date</td>
                    <td style="padding: 8px; border: 1px solid #ddd;">@order.Orders.DayOfWeek</td>
                    <td style="padding: 8px; border: 1px solid #ddd;">@order.Orders.Time</td>
                    <td style="padding: 8px; border: 1px solid #ddd;">@order.Orders.EntryMode</td>
                    <td style="padding: 8px; border: 1px solid #ddd;">@order.Orders.Amount</td>
                    <td style="padding: 8px; border: 1px solid #ddd;">@order.Orders.TypeOfTransaction</td>
                    <td style="padding: 8px; border: 1px solid #ddd;">@order.Orders.CountryOfTransaction</td>
                    <td style="padding: 8px; border: 1px solid #ddd;">@order.Orders.ShippingAddress</td>
                    <td style="padding: 8px; border: 1px solid #ddd;">@order.Orders.Bank</td>
                    <td style="padding: 8px; border: 1px solid #ddd;">@order.Orders.TypeOfCard</td>
                    <td style="padding: 8px; border: 1px solid #ddd;">@order.Orders.Fraud</td>
                    <td class="prediction-cell">@order.Prediction</td>
                    <td>
                        <!-- Edit Button -->
                        <a href="@Url.Action("EditProduct", "Home", new { id = order.Orders.TransactionId })" class="btn btn-primary"
                           style="padding: 5px 10px; background-color: #4CAF50; color: white; text-decoration: none; border-radius: 3px;">Edit</a>
                    </td><td>

                        <a href="@Url.Action("DeleteProduct", "Home", new { id = order.Orders.TransactionId })" class="btn btn-danger"
                           style="padding: 5px 10px; background-color: #f44336; color: white; text-decoration: none; border-radius: 3px; margin-left: 5px;">Delete</a>

                    </td>
                </tr>
            }
          
        </tbody>
    </table>
