@{
}
@model IEnumerable<UserRolesViewModel>

<h1>User Management</h1>
<table class="table">
    <thead>
        <tr>
            <th>Username</th>
            <th>Email</th>
            <th>Roles</th>
            <th>Edit</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.UserName</td>
                <td>@user.Email</td>
                <td>@string.Join(", ", user.Roles)</td>
                <td><a asp-action="EditUserRoles" asp-route-id="@user.UserId">Edit Roles</a></td>
            </tr>
        }
    </tbody>
</table>
